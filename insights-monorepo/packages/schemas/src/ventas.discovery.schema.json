{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["summary","opportunities","objections","next_steps"],
  "properties": {
    "summary": {"type": "string"},
    "key_topics": {"type": "array", "items": {"type": "string"}},
    "sentiment": {"type": "string"},
    "opportunities": {"type": "array", "items": {"type": "string"}},
    "objections": {"type": "array", "items": {"type": "object", "required": ["type","text","suggested_reply"], "properties": {"type": {"type": "string"}, "text": {"type": "string"}, "suggested_reply": {"type": "string"}}}},
    "next_steps": {"type": "array", "items": {"type": "object", "properties": {"text": {"type": "string"}, "owner_email": {"type": "string"}, "due_date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"}, "priority": {"type": "string", "enum": ["alta","media","baja"]}}}},
    "items": {"type": "array", "items": {"type": "object"}}
  }
}
